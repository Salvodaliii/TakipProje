@model TakipProje.Models.LisansMailAlici

@{
    ViewBag.Title = "Lisans Alıcı Mail Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<center><h2>Lisans Alıcı Mail Güncelleme İşlemi</h2></center>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Alıcı Güncelle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <span class="create_titles">Alıcı Mail Adresi</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.AliciMailAdresi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AliciMailAdresi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Güncelle" class="btn btn-success" />

            <button style="float:right" type="button" class="btn btn-primary" onClick="location.href='/LisansMailAlicis/Index'">Geri Dön</button>

        </div>
    </div>
    </div>
}