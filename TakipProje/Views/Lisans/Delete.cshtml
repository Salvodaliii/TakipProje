    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*<div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> | @Html.ActionLink("Back to List", "Index")
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sil" class="btn btn-danger" />
                <div id="btn_geridon">

                    <button type="button" class="btn btn-primary" onClick="location.href='/Lisans/Index'">Geri Dön</button>

                </div>
            </div>
        </div>
    }
</div>
<style>
    .delete_title {
        color: black;
        font-weight: bolder;
    }

    #btn_geridon {
        float: right;
    }
