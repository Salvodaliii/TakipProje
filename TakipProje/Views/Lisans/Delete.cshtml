        </dd>

        <dt>
            <span class="delete_title">Sabit Telefon</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SabitTelefon)
        </dd>

        <dt>
            <span class="delete_title">GSM</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gsm)
        </dd>

        <dt>
            <span class="delete_title">Mail</span>
        </dt>

        <dd>
