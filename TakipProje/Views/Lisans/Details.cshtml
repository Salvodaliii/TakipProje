@model TakipProje.Models.Lisans

@{
    ViewBag.Title = "Lisans Ayrıntı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<br>
<center><h2>Lisans Bilgileri Ayrıntılar</h2></center>

<div>
    <h4>Lisans Ayrıntıları</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span class="details_title">Program Adı</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProgramAdi)
        </dd>
        <br>
        <dt>
            <span class="details_title">Adet</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adet)
        </dd>
        <br>
        <dt>
            <span class="details_title">Firma Adı</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirmaAdi)
        </dd>
        <br>
        <dt>
            <span class="details_title">Sabit Telefon</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SabitTelefon)
        </dd>
        <br>
        <dt>
            <span class="details_title">GSM</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gsm)
        </dd>
        <br>
        <dt>
            <span class="details_title">Mail</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <br>
        <dt>
            <span class="details_title">Alım Tarihi</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimTarihi)
        </dd>
        <br>
        <dt>
            <span class="details_title">Bitiş Tarihi</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BitisTarihi)
        </dd>
        <br>
        <dt>
            <span class="details_title">Yenileme Tarihi</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YenilemeTarihi)
        </dd>
        <br>
        <dt>
            <span class="details_title">Alış Fiyatı</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlisFiyati)
        </dd>
        <br>
    </dl>
</div>
<p>
    


    <div class="col-sm-offset-1 col-md-10">
        <span class="btn_duzenle" style="float:left;">@Html.ActionLink("Güncelle", "Edit", new { id = Model.ID }, new { @class = "btn_duzenle_txt" })</span>
        &nbsp;&nbsp;&nbsp;<button type="button" class="btn btn-info" onClick="location.href='/LisansDetay/Index'" style="transition:900ms;">Tarihçe</button>



        <div id="btn_geridon">
            <button type="button" class="btn btn-primary" onClick="location.href='/Lisans/Index'">Geri Dön</button>
        </div>
    </div>
</p>

<style>
    .details_title{
        color:black;
        font-weight:bolder;
    }
    #btn_geridon {
        float: right;
    }

        .btn_duzenle_txt {
            transition: 900ms;
            background-color: #FFC107;
            font-size: 15px;
            padding-top: 9px;
            padding-bottom: 9px;
            padding-left: 13px;
            padding-right: 13px;
            border-radius: 5px;
            color: white;
            text-decoration: none;
            font-weight: inherit;
            letter-spacing: 0.7px;
            background-color: rgba(28,200,138,1);
        }
        .btn_duzenle_txt:hover {
            text-decoration: none;
            background-color: rgba(22,160,110,1);
            color: white;
        }

</style>
