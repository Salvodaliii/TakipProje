@model IEnumerable<TakipProje.Models.Lisans>

@{
    ViewBag.Title = "Lisans Takibi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Mevcut Lisans Kaydı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.LisansKayitSayisi - Kayıt</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-medal fa-2x text-gray-500"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Mevcut Bakım Kaydı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.BakimKayitSayisi - Kayıt</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tools fa-2x text-gray-500"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Mevcut Servis Kaydı
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewBag.ServisKayitSayisi - Kayıt</div>
                            </div>
                            <div class="col">
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-cogs fa-2x text-gray-500"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Mevcut Yedekleme Kaydı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.YedeklemeKayitSayisi - Kayıt</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-server fa-2x text-gray-500"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<br>
<br>
<center><h2>Lisans Takip Kayıt İşlemleri</h2></center>

<br>
<button type="button" class="btn btn-primary" onClick="location.href='/Lisans/Create'" style="transition:900ms;">Yeni Kayıt Oluştur</button>
<button type="button" class="btn btn-info" onClick="location.href='/LisansDetay/Index'" style="transition:900ms;">Tarihçe</button>
<br>
<br>
<table class="table table-striped table-bordered dt-responsive nowrap" id="lisans">
    <thead>
        <tr>
            <th>
                <span>Program Adı</span>
            </th>
            <th>
                <span>Sabit Telefon</span>
            </th>
            <th>
                <span>Mail</span>
            </th>
            <th>
                <span>Alım Tarihi</span>
            </th>
            <th>
                <span>Yenileme Tarihi</span>
            </th>
            <th>
                <span>Bitiş Tarihi</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgramAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SabitTelefon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @item.AlimTarihi.ToString("yyyy.MM.dd")
                </td>
                <td>
                    @item.YenilemeTarihi.ToString("yyyy.MM.dd")
                </td>
                <td>
                    @item.BitisTarihi.ToString("yyyy.MM.dd")
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.ID }, new { @class = "btn_duzenle" }) |
                    @Html.ActionLink("Ayrıntılar", "Details", new { id = item.ID }, new { @class = "btn_ayrintilar" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn_sil" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'csv', 'pdf', 'colvis']
        });

        table.buttons().container()
            .appendTo('#example_wrapper .col-md-6:eq(0)');
    });
</script>

