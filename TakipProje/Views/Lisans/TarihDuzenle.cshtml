@model TakipProje.Models.Lisans

@{
    ViewBag.Title = "Lisans Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<center><h2>Lisans Güncelleme İşlemi</h2></center>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Lisans Kayıt Bilgileri</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)


    <span class="create_titles">Program Adı :</span> <span> </span> @Model.ProgramAdi
    <br />
    <br />
    <br />






    <div class="form-group">
        <span class="create_titles">Bitiş Tarihi</span>

        <div class="col-md-10">
            @Html.EditorFor(model => model.BitisTarihi, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.BitisTarihi, "", new { @class = "text-danger" })
        </div>
        <span style="font-style:italic; margin-left:14px;">Atanan Bitiş Tarihi : </span> <span>@Model.BitisTarihi.ToString("dd-MM-yyyy")</span>

    </div>
    <br />
    <br />


    <div class="form-group">
        <span class="create_titles">Yenileme Tarihi</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.YenilemeTarihi, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.YenilemeTarihi, "", new { @class = "text-danger" })
        </div>
        <span style="font-style:italic; margin-left:14px;">Atanan Yenileme Tarihi : </span> <span>@Model.YenilemeTarihi.ToString("dd-MM-yyyy")</span>

    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.AlimTarihi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.AlimTarihi, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Güncelle" class="btn btn-success" />
            <div id="btn_geridon">

                <button type="button" class="btn btn-primary" onClick="location.href='/Lisans/Index'">Geri Dön</button>

            </div>
        </div>
    </div>

</div>
}

<div class="form-group">
    <div class="col-md-10">
        @Html.HiddenFor(model => model.AlisFiyati, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        @Html.ValidationMessageFor(model => model.AlisFiyati, "", new { @class = "text-danger" })
    </div>
</div>

