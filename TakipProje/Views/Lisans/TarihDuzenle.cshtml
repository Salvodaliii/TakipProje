@model TakipProje.Models.Lisans

@{
    ViewBag.Title = "Lisans Tarih Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<center><h2>Lisans Güncelleme İşlemi</h2></center>


@using (Html.BeginForm())
{

<div class="form-horizontal">
    <h4>Lisans Kayıt Bilgileri</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)


<div class="form-group">
    <div class="col-md-10">
        <dt>
            <span class="details_title">Program Adı</span>
        </dt>


        <dd>
            @Html.DisplayFor(model => model.ProgramAdi)
        </dd>
        <br>
        <dt>
            <span class="details_title">Adet</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adet)
        </dd>
        <br>
        <dt>
            <span class="details_title">Firma Adı</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirmaAdi)
        </dd>
        <br>
        <dt>
            <span class="details_title">Sabit Telefon</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SabitTelefon)
        </dd>
        <br>
        <dt>
            <span class="details_title">GSM</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gsm)
        </dd>
        <br>
        <dt>
            <span class="details_title">Mail</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <br>
        <br>
        <dt>
            <span class="details_title">Yenileme Tarihi</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YenilemeTarihi)
        </dd>
        <br>
        <dt>
            <span class="details_title">Alış Fiyatı</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlisFiyati) ₺
        </dd>
    </div>
</div>
    <br />
    <br />














    <div class="form-group">
        <span class="create_titles">Bitiş Tarihi</span>

        <div class="col-md-10">
            @Html.EditorFor(model => model.BitisTarihi, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.BitisTarihi, "", new { @class = "text-danger" })
        </div>
        <span style="font-style:italic; margin-left:14px;">Atanan Bitiş Tarihi : </span> <span>@Model.BitisTarihi.ToString("dd-MM-yyyy")</span>

    </div>
    <br />


    <div class="form-group">
        <span class="create_titles">Yenileme Tarihi</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.YenilemeTarihi, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.YenilemeTarihi, "", new { @class = "text-danger" })
        </div>
        <span style="font-style:italic; margin-left:14px;">Atanan Yenileme Tarihi : </span> <span>@Model.YenilemeTarihi.ToString("dd-MM-yyyy")</span>

    </div>



    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.AlisFiyati, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AlisFiyati, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.ProgramAdi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProgramAdi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Adet, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Adet, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.FirmaAdi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirmaAdi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.SabitTelefon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SabitTelefon, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Gsm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Gsm, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.AlimTarihi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AlimTarihi, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Güncelle" class="btn btn-success" />

            <button style="float: right;" type="button" class="btn btn-primary" onClick="location.href='/Lisans/Index'">Geri Dön</button>

        </div>
    </div>

</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
