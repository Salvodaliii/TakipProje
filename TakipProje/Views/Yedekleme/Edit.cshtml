@model TakipProje.Models.Yedekleme

@{
    ViewBag.Title = "Yedekleme Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<center><h2>Yedekleme Güncelleme İşlemi</h2></center>


@using (Html.BeginForm())
{

<div class="form-horizontal">
    <h4>Yedekleme Bilgileri</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

<div class="form-group">
    @*<span class="create_titles">Yedekleme Periyodu</span>*@
    <div class="col-md-10">
        @Html.HiddenFor(model => model.YedeklemePeriyodu, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.YedeklemePeriyodu, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <span class="create_titles">Yedekleme Plan Adı</span>
    <div class="col-md-10">
        @Html.EditorFor(model => model.YedeklemePlaniAdi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.YedeklemePlaniAdi, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <span class="create_titles">Durum</span>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Durum, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Durum, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <span class="create_titles">Oluşturma Tarihi</span>
    <div class="col-md-10">
        @Html.EditorFor(model => model.OlusturmaTarihi, new { htmlAttributes = new { @class = "form-control", type="date"} })
        @Html.ValidationMessageFor(model => model.OlusturmaTarihi, "", new { @class = "text-danger" })
        <div style="font-style:italic"> Atanan Oluşturma Tarihi :
            @Html.DisplayFor(model => model.OlusturmaTarihi)
        </div>
        </div>
</div>

<div class="form-group">
    <span class="create_titles">Son Yedekleme Tarihi</span>
    <div class="col-md-10">
        @Html.EditorFor(model => model.SonYedeklemeTarihi, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
        @Html.ValidationMessageFor(model => model.SonYedeklemeTarihi, "", new { @class = "text-danger" })
        <div style="font-style:italic">
            Atanan Son Yedekleme Tarihi :
            @Html.DisplayFor(model => model.SonYedeklemeTarihi)
        </div>
    </div>
</div>

<div class="form-group">
    <span class="create_titles">Kontrol Eden Personel</span>
    <div class="col-md-10">
        @Html.EditorFor(model => model.KontrolEdenPersonel, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.KontrolEdenPersonel, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Güncelle" class="btn btn-success" />

            <button style="float:right" type="button" class="btn btn-primary" onClick="location.href='/Yedekleme/Index'">Geri Dön</button>

    </div>
</div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
