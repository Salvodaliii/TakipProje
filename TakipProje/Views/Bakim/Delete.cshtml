@model TakipProje.Models.Bakim

@{
    ViewBag.Title = "Bakım Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<center><h2>Bakım Silme İşlemi</h2></center>
<br>
<center><h3 style="color:red;background-color:rgba(1,1,1,0.1);">Uyarı ! : Bu Bakım Kaydını Silmek İstediğinize Emin Misiniz ?</h3></center>

<div>
    <br>
    <h4>Bakım Bilgileri</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span class="delete_title">Bakım Adı</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BakimAdi)
        </dd>

        <dt>
            <span class="delete_title">Bakım Tarihi</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BakimTarihi)
        </dd>

        <dt>
            <span class="delete_title">Bakım Yapan Personel</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BakimYapanPersonel)
        </dd>

        <dt>
            <span class="delete_title">Periyot</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Periyot)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sil" class="btn btn-danger" />
                <div id="btn_geridon">

                    <button type="button" class="btn btn-primary" onClick="location.href='/Bakim/Index'">Geri Dön</button>

                </div>
            </div>
        </div>
    }
</div>

<style>
    .delete_title {
        color: black;
        font-weight: bolder;
    }

    #btn_geridon {
        float: right;
    }
</style>
