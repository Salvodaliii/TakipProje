@model TakipProje.Models.Servis

@{
    ViewBag.Title = "Servis Ayrıntı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<center><h2>Servis Bilgileri Ayrıntılar</h2></center>

<div>
    <h4>Servis Ayrıntıları</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span class="details_title">İş Adı</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.İsAdi)
        </dd>

        <dt>
            <span class="details_title">Bakım Periyodu</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BakimPeriyodu)
        </dd>

        <dt>
            <span class="details_title">Firma Adı</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirmaAdi)
        </dd>

        <dt>
            <span class="details_title">Sabit Telefon</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SabitTelefon)
        </dd>

        <dt>
            <span class="details_title">Destek Personeli</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DestekPersonelAdSoyad)
        </dd>

        <dt>
            <span class="details_title">GSM</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gsm)
        </dd>

        <dt>
            <span class="details_title">Mail</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mail)
        </dd>

        <dt>
            <span class="details_title">Başlangıç Tarihi</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BaslangicTarihi)
        </dd>

        <dt>
            <span class="details_title">Bitiş Tarihi</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BitisTarihi)
        </dd>

        <dt>
            <span class="details_title">Bakım ve Açıklamalar</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BakimveAciklamalar)
        </dd>

    </dl>
</div>
<div class="col-sm-offset-1 col-md-10">
    <span class="btn_duzenle" style="float:left;">@Html.ActionLink("Güncelle", "Edit", new { id = Model.ID }, new { @class = "btn_duzenle_txt" })</span>


    <div id="btn_geridon">
        <button type="button" class="btn btn-primary" onClick="location.href='/Servis/Index'">Geri Dön</button>
    </div>
</div>

<style>
    .details_title {
        color: black;
        font-weight: bolder;
    }

    #btn_geridon {
        float: right;
    }

    .btn_duzenle_txt {
        transition: 900ms;
        background-color: #FFC107;
        font-size: 15px;
        padding-top: 9px;
        padding-bottom: 9px;
        padding-left: 13px;
        padding-right: 13px;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        font-weight: inherit;
        letter-spacing: 0.7px;
        background-color: rgba(28,200,138,1);
    }

        .btn_duzenle_txt:hover {
            text-decoration: none;
            background-color: rgba(22,160,110,1);
            color: white;
        }
</style>

