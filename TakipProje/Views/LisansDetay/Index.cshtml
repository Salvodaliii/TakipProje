@model IEnumerable<TakipProje.Models.LisansDetay>

@{
    ViewBag.Title = "Lisans Tarihçe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Index", "LisansDetay", FormMethod.Get))
{

    <h2 class="title">Lisans Programlarının Geçmiş Fiyat Bilgileri</h2>
    <div class="search">
        @*Program Adı : @Html.TextBox("p")*@
        <label id="s_title" for="p">Program Adı : </label>
        <input type="text" name="p" size="80" placeholder="Aranacak Programın Adınızı Giriniz.." />&nbsp;&nbsp;&nbsp;
        <input class="s_btn" type="submit" value="Ara" />&nbsp;&nbsp;
        <button class="s_btn" href="~/LisansDetay/Index">Geri Dön</button>
    </div>
}

@*#466BD9 LEFTBAR CODE*@

<style>
    .title {
        text-align: center;
        margin: 30px;
        letter-spacing: 1px;
        padding: 15px;
        font-weight: lighter;
    }

    #s_title {
        font-weight: bolder;
        letter-spacing: 0.5px;
    }

    .search {
        border: solid gray 2px;
        margin: 15px;
        padding: 15px;
        margin: 10px;
        text-align: left;
    }

    .searchbox {
        width: 250px;
    }

    .s_btn {
        width: 100px;
        padding: 5px;
        background-color: #466BD9;
        color: white;
    }
</style>

<table id="lisansDetay" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                <p>
                    Program Adı
                </p>
            </th>
            <th>
                <p>
                    Alış Tarihi
                </p>
            </th>
            <th>
                <p>
                    Alış Fiyatı
                </p>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgramAd)
                </td>
                <td>
                    @item.ProgramTarih.ToString("yyyy.MM.dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgramFiyat)
                </td>

            </tr>
        }
    </tbody>
</table>
