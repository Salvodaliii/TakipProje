@model IEnumerable<TakipProje.Models.LisansDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Index", "LisansDetay", FormMethod.Get))
{
    <p>
        Aranacak Program: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<h2>Index</h2>

<table id="lisansDetay" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                <p>
                    Program Adı
                </p>
            </th>
            <th>
                <p>
                    Alış Tarihi
                </p>
            </th>
            <th>
                <p>
                    Alış Fiyatı
                </p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgramAd)
                </td>
                <td>
                    @item.ProgramTarih.ToString("yyyy.MM.dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgramFiyat)
                </td>

            </tr>
        }
    </tbody>
</table>
