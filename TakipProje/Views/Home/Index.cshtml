@{
    ViewBag.Title = "Anasayfa";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div id="title_mevcut" class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Mevcut Lisans Kaydı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.LisansKayitSayisi - Kayıt</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-medal fa-2x text-gray-500"></i>
                    </div>
                </div>
            </div>
            <center><button id="hometoindex" type="button" class="btn btn-primary" onClick="location.href='/Lisans/Index'">Lisans Takip</button></center>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div id="title_mevcut" class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Mevcut Bakım Kaydı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.BakimKayitSayisi - Kayıt</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tools fa-2x text-gray-500"></i>
                    </div>
                </div>
            </div>
            <center><button id="hometoindex" type="button" class="btn btn-success" onClick="location.href='/Bakim/Index'">Bakım Takip</button></center>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div id="title_mevcut" class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Mevcut Servis Kaydı
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewBag.ServisKayitSayisi - Kayıt</div>
                            </div>
                            <div class="col">
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-cogs fa-2x text-gray-500"></i>
                    </div>
                </div>
            </div>
            <center><button id="hometoindex" type="button" class="btn btn-info" onClick="location.href='/Servis/Index'">Servis Takip</button></center>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div id="title_mevcut" class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Mevcut Yedekleme Kaydı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.YedeklemeKayitSayisi - Kayıt</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-server fa-2x text-gray-500"></i>
                    </div>
                </div>
            </div>
            <center><button id="hometoindex" type="button" class="btn btn-warning" onClick="location.href='/Yedekleme/Index'">Yedekleme Takip</button></center>
        </div>
    </div>
</div>





@**@

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bize Ulaşın</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="alert alert-info">@TempData["Message"]</div>





        <input type="file" name="myFiles" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-default" type="submit" value="Gönder"  />
            </div>
        </div>
    </div>
}



