@model TakipProje.Models.YedeklemeMailPeriyodu

@{
    ViewBag.Title = "Yedekleme Mail Periyodu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("YedeklemeMail", "Mail", FormMethod.Post))
{

    <center><h5>Yedekleme Bildiri Maili Belirleme Sayfası</h5></center>
    <hr />
    <div style="border:solid black 1px;padding:15px;">



        <div>
            <span style="font-style:italic">[Manuel Olarak Gün Değeri Atanmaz İse Bildirim Maili 10 Gün Kala Atılır.]</span><br /><br />
        </div>

        <div class="input-group" style="border:solid black 1px;padding:15px;">
            <span>Yedekleme Bitiş Sürelerine</span> &nbsp;<input type="number" placeholder="Gün" required="" name="YmailGun">&nbsp; <span>Kala Mail Bildirimi Yapılsın.</span>
        </div>



        <br />
        <div>
            <button class="btn btn-warning" type="submit">Kaydet</button>
            <button type="button" class="btn btn-primary" onClick="location.href='/Yedekleme/Index'">Geri Dön</button>
        </div>
    </div>
    <br />
    <br />
}